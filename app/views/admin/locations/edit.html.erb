<% content_for :title, "Edit Location" %>

<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3">Edit Location</h1>
</div>

<div class="wrapper-md">

    <%= render 'admin/partials/flash_message' %>

    <div class="panel panel-default">
        <div class="panel-heading font-bold">
            Edit Location
        </div>
        <div class="panel-body">
            <%= form_for :location, url: admin_location_path(@location), method: :patch, :html => {:class => 'form-horizontal'} do |f| %>

                <div class="form-group <%= 'has-error' if @location.errors[:name].present? %>">
                    <%= f.label :name, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :name, :class => 'form-control' %>
                        <%= show_errors(@location, :name).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group <%= 'has-error' if @location.errors[:district_id].present? %>">
                  <%= f.label :district_id, 'District', :class => 'col-sm-2 control-label' %>
                  <div class="col-sm-6">
                    <%= f.collection_select(:district_id, @districts, :id, :name, { :include_blank => 'Select District', :prompt => false }, { :class => 'form-control' }) %>
                    <%= show_errors(@location, :district_id).html_safe %>
                  </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <%= f.submit 'Update', :class => 'btn btn-primary' %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div>
