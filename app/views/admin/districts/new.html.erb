<% content_for :title, "Add a District" %>

<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3">Add a District</h1>
</div>

<div class="wrapper-md">

    <%= render 'admin/partials/flash_message' %>

    <div class="panel panel-default">
        <div class="panel-heading font-bold">
            Add District
        </div>
        <div class="panel-body">
            <%= form_for :district, url: admin_districts_path, :html => {:class => 'form-horizontal'} do |f| %>

                <div class="form-group <%= 'has-error' if @district.errors[:name].present? %>">
                    <%= f.label :name, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :name, :class => 'form-control' %>
                        <%= show_errors(@district, :name).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <%= f.submit 'Add District', :class => 'btn btn-primary' %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div>
