<% content_for :title, "Add an Admin" %>

<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3">Add an Admin</h1>
</div>

<div class="wrapper-md">

    <%= render 'admin/partials/flash_message' %>

    <div class="panel panel-default">
        <div class="panel-heading font-bold">
            Add Admin
        </div>
        <div class="panel-body">
            <%= form_for :admin, url: admin_admins_path, method: :post, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>

                <div class="form-group <%= 'has-error' if @admin.errors[:name].present? %>">
                    <%= f.label :name, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :name, :class => 'form-control' %>
                        <%= show_errors(@admin, :name).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group <%= 'has-error' if @admin.errors[:email].present? %>">
                    <%= f.label :email, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.email_field :email, :class => 'form-control' %>
                        <%= show_errors(@admin, :email).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group <%= 'has-error' if @admin.errors[:password].present? %>">
                    <%= f.label :password, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.password_field :password, :class => 'form-control' %>
                        <%= show_errors(@admin, :password).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group <%= 'has-error' if @admin.errors[:phone].present? %>">
                    <%= f.label :phone, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :phone, :class => 'form-control', maxlength: 10 %>
                        <%= show_errors(@admin, :phone).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <%= f.submit 'Add Admin', :class => 'btn btn-primary' %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div>
