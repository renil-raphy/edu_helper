<% content_for :title, "Edit University" %>

<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3">Edit University</h1>
</div>

<div class="wrapper-md">

    <%= render 'admin/partials/flash_message' %>

    <div class="panel panel-default">
        <div class="panel-heading font-bold">
            Edit University
        </div>
        <div class="panel-body">
            <%= form_for :university, url: admin_university_path(@university), method: :patch, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>

                <div class="form-group <%= 'has-error' if @university.errors[:name].present? %>">
                    <%= f.label :name, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :name, :class => 'form-control' %>
                        <%= show_errors(@university, :name).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group <%= 'has-error' if @university.errors[:website].present? %>">
                    <%= f.label :website, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :website, :class => 'form-control' %>
                        <%= show_errors(@university, :website).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group <%= 'has-error' if @university.errors[:phone].present? %>">
                    <%= f.label :phone, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_field :phone, :class => 'form-control' %>
                        <%= show_errors(@university, :phone).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group <%= 'has-error' if @university.errors[:address].present? %>">
                    <%= f.label :address, :class => 'col-sm-2 control-label' %>
                    <div class="col-sm-10">
                        <%= f.text_area :address, rows: 4, :class => 'form-control' %>
                        <%= show_errors(@university, :address).html_safe %>
                    </div>
                </div>
                <div class="line line-dashed b-b line-lg pull-in"></div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <%= f.submit 'Update', :class => 'btn btn-primary' %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div>
