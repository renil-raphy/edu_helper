<% content_for :title, "Edit Question" %>

<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Edit Question</h1>
</div>

<div class="wrapper-md">
  <%= render 'admin/partials/flash_message' %>

  <div class="panel panel-default">
    <div class="panel-heading font-bold">
      Edit Question
    </div>
    <div class="panel-body">
      <%= form_for :question, url: admin_question_path(@question), method: :patch, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>

        <div class="form-group <%= 'has-error' if @question.errors[:qn_text].present? %>">
          <%= f.label :qn_text, "Question", :class => 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :qn_text, :class => 'form-control' %>
            <%= show_errors(@question, :qn_text).html_safe %>
          </div>
        </div>
        <div class="line line-dashed b-b line-lg pull-in"></div>

        <div class="form-group <%= 'has-error' if @question.errors[:category_id].present? %>">
          <%= f.label :category_id, 'Category', :class => 'col-sm-2 control-label' %>
          <div class="col-sm-5">
            <%= f.collection_select(:category_id, @categories, :id, :name, { :include_blank => 'Select Question Category', :prompt => false }, { :class => 'form-control' }) %>
            <%= show_errors(@question, :category_id).html_safe %>
          </div>
        </div>
        <div class="line line-dashed b-b line-lg pull-in"></div>

        <div class="form-group">
          <div class="col-sm-4 col-sm-offset-2">
            <%= f.submit 'Update', :class => 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
