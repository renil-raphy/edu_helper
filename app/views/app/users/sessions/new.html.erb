<% content_for :title, "Login" %>

<div class="container w-xxl w-auto-xs">
  <a href class="navbar-brand block m-t"></a>
  <%= link_to image_tag("app/logo-mark.png", alt: "EduHelper", width: 60) + '<span class="hidden-folded m-l-xs">EduHelper</span>'.html_safe, app_root_path, class: "navbar-brand block m-t" %>
  <div class="m-b-lg">
    <div class="wrapper text-center text-2x">
      <strong>User Log In</strong>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="text-danger wrapper text-center">
        <div class='row'>
          <%= render 'app/partials/flash_message' %>
        </div>
      </div>
      <div class="list-group list-group-sm">
        <div class="list-group-item">
          <%= f.email_field :email, class: 'form-control no-border', placeholder: "Email Address" %>
        </div>
        <div class="list-group-item">
           <%= f.password_field :password, autocomplete: "off", class: 'form-control no-border', placeholder: "Password" %>
        </div>
      </div>

      <button type="submit" class="btn btn-lg btn-primary btn-block">Log in</button>

      <div class="text-center m-t m-b">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
        <% end -%>
      </div>

      <div class="line line-dashed"></div>
      <p class="text-center"><small>Don't have an account?</small></p>
      <%= link_to "Sign Up".html_safe, new_app_user_registration_path, class: "btn btn-lg btn-default btn-block" %>
    <% end %>
  </div>
  <div class="text-center">
    <p><small class="text-muted">&copy; <%= Date.current.year %> EduHelper. All Rights Reserved.</small></p>
  </div>
</div>
