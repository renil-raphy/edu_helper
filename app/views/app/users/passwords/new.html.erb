<% content_for :title, "Forgot Password" %>

<div class="container w-xxl w-auto-xs">
  <a href class="navbar-brand block m-t"></a>
  <%= link_to image_tag("app/logo-mark.png", size: "42x30", alt: "SkreemSocial") + '<span class="hidden-folded m-l-xs">SkreemSocial</span>'.html_safe, app_root_path, class: "navbar-brand block m-t" %>
  <div class="m-b-lg">
    <div class="wrapper text-center">
      <strong>Forgot Your Password?</strong>
      <p class="text-muted">
        <small>Please enter your Email Address below and we will send you the intructions to reset the password.</small>
      </p>
    </div>

    <% flash[:error] = resource.errors.messages[:email].first if resource.errors.any? && resource.errors.messages[:email].present? %>
    <div class="text-danger wrapper text-center" ng-show="authError">
      <div class='row'>
        <%= render 'app/partials/flash_message' %>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="list-group list-group-sm">
        <div class="list-group-item">
          <%= f.email_field :email, class: 'form-control no-border', placeholder: "Email Address" %>
        </div>
      </div>

      <button type="submit" class="btn btn-lg btn-primary btn-block">Reset Password</button>

      <div class="line line-dashed"></div>
      <p class="text-center"><small>Remember your Password?</small></p>
      <%= link_to "Log in".html_safe, new_app_user_session_path, class: "btn btn-lg btn-default btn-block" %>
    <% end %>
  </div>
  <div class="text-center">
    <p><small class="text-muted">&copy; <%= Date.current.year %> SkreemSocial. All Rights Reserved.</small></p>
  </div>
</div>
